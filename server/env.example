# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database?retryWrites=true&w=majority&appName=YourAppName

# JWT Secrets (Generate new ones for production)
ACCESS_SECRET=your-access-secret-here
REFRESH_SECRET=your-refresh-secret-here

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com

# Email Configuration
# Options: gmail, zoho, or custom
EMAIL_SERVICE=zoho
EMAIL_USER=jivan@venushiring.com
EMAIL_PASS=your-email-password
SMTP_HOST=smtppro.zoho.in
SMTP_PORT=465
SMTP_SECURE=true

# Email Recipients
CONTACT_EMAIL=your-contact-email@gmail.com
# Job application notifications are sent to: megan@venushiring.com, paresh@venushiring.ca, jivan@venushiring.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
