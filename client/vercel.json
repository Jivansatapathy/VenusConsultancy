{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    // Serve static assets directly (do NOT rewrite these to index.html)
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/robots.txt", "dest": "/robots.txt" },

    // Catch-all: everything else -> index.html (SPA fallback)
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
